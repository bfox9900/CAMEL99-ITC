[CC] cr .( Stack primitives ...)  [tc]

: TUCK  ( w1 w2 --  w2 w1 w2 ) SWAP OVER ;

\ double Rstack Forth2012
CODE 2>R    ( d -- ) ( r-- n n)
      RP -4 ADDI,          \ 14
      TOS 2 (RP) MOV,      \ 22
      *SP+   *RP MOV,       \ 26
      TOS POP,             \ 22
      NEXT,              \ = 84
ENDCODE

CODE 2R>     ( -- d )
      TOS PUSH,            \ 28
      SP DECT,             \ 10
      *SP  RPOP,            \ 26
      TOS RPOP,            \ 22
      NEXT,              \ = 88
ENDCODE


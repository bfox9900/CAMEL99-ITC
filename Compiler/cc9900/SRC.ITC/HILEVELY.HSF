      RP0 RP! L0 LP !
      SOURCE-ID OFF
      [COMPILE] [
      BEGIN
        TIB DUP 52 ACCEPT SPACE
        ( addr len) INTERPRET
        STATE @ 0= IF  ."  ok"  THEN CR
      AGAIN ;

